#!/usr/bin/make -f

export PYBUILD_INSTALL_ARGS=--install-scripts=/usr/share/games/pysolfc --install-lib /usr/share/games/pysolfc/

%:
	dh $@ --with python3 --buildsystem=pybuild

# 'make rules' generates html docs, and 'make mo' builds l10n.
# The rest is handled by pybuild.
override_dh_auto_build:
	$(MAKE) rules mo
	dh_auto_build

override_dh_installdocs:
	dh_installdocs
	# We install the docs to /usr/share/doc, so we need to remove the
	# original directory, and later on create a symlink using dh_link.
	rm -r debian/pysolfc/usr/share/games/pysolfc/html/

override_dh_installman:
	dh_installman
	mv debian/pysolfc/usr/share/man/man6/pysol.6 \
	   debian/pysolfc/usr/share/man/man6/pysolfc.6
